<Window x:Class="H3IA9Z_ADT_2022_23_1_WpfClient.LessPaidMovieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:H3IA9Z_ADT_2022_23_1_WpfClient"
        xmlns:vms="clr-namespace:H3IA9Z_ADT_2022_23_1_WpfClient.ViewModels"
        mc:Ignorable="d"
        Title="LessPaidMovieWindow" Height="450" Width="800">
    <Window.DataContext>
        <vms:MoviesWindowViewModel />
    </Window.DataContext>
    <Grid>
        <ListBox
            ItemsSource="{Binding LessPaidMovies}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="1" ContentStringFormat=" {0} $" Content="{Binding Value}"></Label>
                        <Label Grid.Column="0" Content="{Binding Key}"></Label>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>