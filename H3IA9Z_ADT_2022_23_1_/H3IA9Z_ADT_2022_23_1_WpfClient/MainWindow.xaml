<Window x:Class="H3IA9Z_ADT_2022_23_1_WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:H3IA9Z_ADT_2022_23_1_WpfClient"
        xmlns:vms="clr-namespace:H3IA9Z_ADT_2022_23_1_WpfClient.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vms:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Button Command="{Binding ManageMoviesCommand}" Content="Manage Movies" Margin="50" Grid.Column="0" Grid.Row="0" />
        <Button Command="{Binding ManageVisitorsCommand}" Content="Manage Visitors" Margin="50" Grid.Column="0" Grid.Row="1" />
        <Button Command="{Binding ManageReservationsCommand}" Content="Manage Reservations" Margin="50" Grid.Column="1" Grid.Row="0" />
        <Button Content="Exit" Margin="50" Grid.Column="1" Grid.Row="1" />
    </Grid>
</Window>